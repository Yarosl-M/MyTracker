@using MyTracker_App.ViewModels.Auth;
@model LoginViewModel;
@{
    ViewData["Title"] = "Вход в систему";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<header class="text-center">
    <h2 class="text-2xl font-bold uppercase mb-1">Вход в систему</h2>
    <p class="text-red-500">This text should be red.</p>
</header>
<form asp-action="login" method="post" class="p-6 max-w-xl mx-auto mt-24">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
    <div class="mb-1">
        <label asp-for="Email" class="required inline-block text-lg mb-2">Адрес эл. почты</label>
        <input asp-for="Email" class="border border-gray-200 rounded p-2 w-full"/>
    </div>
    <div class="mb-1">
        <label asp-for="Password" class="required inline-block text-lg mb-2">Пароль</label>
        <input asp-for="Password" class="border border-gray-200 rounded p-2 w-full"/>
        <span asp-validation-for="Password" class="italic text-red-500"></span>
    </div>
    <div>
        <input type="submit" value="Войти" class="bg-red-100 cursor-pointer text-red-900 rounded py-2 px-4">
        <p class="italic">Нет учётной записи?</p>
        <p><a asp-controller="account" asp-action="signup" class="text-red-500 underline">Зарегистрироваться</a></p>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}